<div class="container">
<% include ../partials/header %>
 <style>
    {
          font-size:16;
    }
    .block {
       margin-bottom:10px;
    }
    .img-height {
      height:170px;
      width:251px;
    }
    .text {
       height: 60px;
       display: flex;
       flex-direction: column;
     }

   </style>
      
      <header class="jumbotron">
       <div class="container">
        <h1>Welcome To Yelpcamp</h1>
        <p>View our hand-picked campgrounds from all over world</p>
        

<p>  <a class="btn btn-primary  btn-sm" href="/campgrounds/new">Add new campground</a></p>

<!--for fuzzy search -->
<p>
     <form action="/campgrounds"  method="GET" class="form-inline">
        <div class="form-group">
        <input type="text" name="search" placeholder="campground search..." class="form-control">
        <input type="submit" value="search" class=" inputUserName btn btn-default ">
        
        </div>
    </form>
    
    
</p>
    </div>
    
    </header>
   <%  var noMatch; %>
<div class="row text-center text-lg-left " style="display:flex; flex-wrap:wrap; ">
 <p>
  <%  if(noMatch!==undefined){  %>
         <h5> "<%=  noMatch   %>"</h5>
  <%  } %>
  </p>
 <% campgrounds.forEach(function(campground){ %>

   <div class=" col-md-3 col-sm-6 block">
      <div class="rounded img-thumbnail"> 
       <img class="img-thumbnail img-height" src= "<%=campground.image%>" > 
       <div class = "text">
         <span class="text-center"> 
           <%=campground.name%>
         </span>
         <span class="text-center">  
            <a class="btn btn-sm btn-primary float" href="/campgrounds/<%= campground._id %>">More Info</a>
         </span>
       </div>
      
      </div> 
   </div>
 <% }); %>

    
</div>


</div>

<% include ../partials/footer %>




