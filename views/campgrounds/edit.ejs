<div class="container">

<%  include ../partials/header  %>
<style>
h1
{
 margin:10px;
 font-size:28;
 color:#723F1D;
}
</style>


<h1>Edit a <%= campground.name %></h1>

<form action="/campgrounds/<%=campground._id %>/?_method=PUT" method="POST">
   <div class="form-group" style="width:30%;" "margin:25px;">
    <label for="campgrounds">Campground Name:</label>
    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
   </div>
   
   <div class="form-group" style="width:30%;">
    <label for="campgrounds">Price</label>
    <input class="form-control" type="number" name="camp[price]" value="<%=campground.price %>">
   </div>
   
   <div class="form-group" style="width:30%;">
    <label for="campgrounds">Image</label>
    <input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
   </div>
   
   <div class="form-group" style="width:30%;">
    <label for="campgrounds">Description</label>
    <input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
   </div>
 <button class="btn btn-md btn-success mb-2" > submit </button>

</form>

<a class="btn btn-info" href="/campgrounds">Go Back to campground page</a>

<%  include ../partials/footer %>

</div>