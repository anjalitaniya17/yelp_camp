<!DOCTYPE html>
<html>
    <head>
        <title>Yelpcamp</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
           <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    
    <body>
       <%  var noMatch; %> 
    <nav class="navbar navbar-expand-md bg-secondary navbar-dark">
    <a class="navbar-brand" href="/">Yelp Camp</a>

<button class="navbar-toggler collapsed icon-bars" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
 
 <!-- Links -->
 
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
  <ul class="navbar-nav ml-auto">
  
  <% if(!currentUser) { %>
   
    <li class="nav-item">
      <a class="nav-link" href="/register">Signup</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/login">Login</a>
    </li>
  <%  } else{ %>
         <li class="nav-item">
       <a class="nav-link" href="#">Signed in as <%= currentUser.username%></a>
        <li class="nav-item">
       <a class="nav-link" href="/logout">Logout</a>
     <% } %>
    </li>
  </ul>
</div>
</nav>
<p>
<div class="container">
    <% if(error && error.length>0) { %>
<div class="alert alert-danger" role="alert">
  <h6><%= error %></h6>
</div>
<% } %>
 <% if(success && success.length>0) { %>
<div class="alert alert-success" role="alert">
  <h6><%= success %></h6>
</div>
<% } %>
</div>
</p>